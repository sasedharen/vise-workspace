{
    "id": null,
    "title": "Database Metrics (PostgreSQL)",
    "tags": ["database", "postgresql", "performance"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Active Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "pg_stat_activity_count{datname=\"vise\",state=\"active\"}",
            "legendFormat": "Active Connections",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 100}
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Query Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(pg_stat_database_xact_commit{datname=\"vise\"}[5m]) + rate(pg_stat_database_xact_rollback{datname=\"vise\"}[5m])",
            "legendFormat": "Queries/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 500}
              ]
            },
            "unit": "qps"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Cache Hit Ratio",
        "type": "stat",
        "targets": [
          {
            "expr": "pg_stat_database_blks_hit{datname=\"vise\"} / (pg_stat_database_blks_hit{datname=\"vise\"} + pg_stat_database_blks_read{datname=\"vise\"}) * 100",
            "legendFormat": "Cache Hit %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 90},
                {"color": "green", "value": 95}
              ]
            },
            "unit": "percent"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Database Size",
        "type": "stat",
        "targets": [
          {
            "expr": "pg_database_size_bytes{datname=\"vise\"}",
            "legendFormat": "DB Size",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1073741824},
                {"color": "red", "value": 5368709120}
              ]
            },
            "unit": "bytes"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Connection Activity",
        "type": "timeseries",
        "targets": [
          {
            "expr": "pg_stat_activity_count{datname=\"vise\",state=\"active\"}",
            "legendFormat": "Active",
            "refId": "A"
          },
          {
            "expr": "pg_stat_activity_count{datname=\"vise\",state=\"idle\"}",
            "legendFormat": "Idle",
            "refId": "B"
          },
          {
            "expr": "pg_stat_activity_count{datname=\"vise\",state=\"idle in transaction\"}",
            "legendFormat": "Idle in Transaction",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 6,
        "title": "Transaction Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(pg_stat_database_xact_commit{datname=\"vise\"}[5m])",
            "legendFormat": "Commits",
            "refId": "A"
          },
          {
            "expr": "rate(pg_stat_database_xact_rollback{datname=\"vise\"}[5m])",
            "legendFormat": "Rollbacks",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "ops"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 7,
        "title": "Buffer Cache Performance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(pg_stat_database_blks_hit{datname=\"vise\"}[5m])",
            "legendFormat": "Cache Hits",
            "refId": "A"
          },
          {
            "expr": "rate(pg_stat_database_blks_read{datname=\"vise\"}[5m])",
            "legendFormat": "Disk Reads",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "ops"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 8,
        "title": "Tuple Activity",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(pg_stat_database_tup_inserted{datname=\"vise\"}[5m])",
            "legendFormat": "Inserts",
            "refId": "A"
          },
          {
            "expr": "rate(pg_stat_database_tup_updated{datname=\"vise\"}[5m])",
            "legendFormat": "Updates",
            "refId": "B"
          },
          {
            "expr": "rate(pg_stat_database_tup_deleted{datname=\"vise\"}[5m])",
            "legendFormat": "Deletes",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "ops"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 9,
        "title": "Lock Activity",
        "type": "timeseries",
        "targets": [
          {
            "expr": "pg_locks_count{datname=\"vise\",mode=\"AccessShareLock\"}",
            "legendFormat": "Access Share Locks",
            "refId": "A"
          },
          {
            "expr": "pg_locks_count{datname=\"vise\",mode=\"ExclusiveLock\"}",
            "legendFormat": "Exclusive Locks",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 10,
        "title": "Slow Queries",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, pg_stat_statements_mean_time_seconds{datname=\"vise\"})",
            "legendFormat": "{{query}}",
            "refId": "A",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "s"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
}
